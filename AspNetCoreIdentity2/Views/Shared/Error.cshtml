@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocorreu um erro!" : Model.Titulo;
}

@{
    if (Model == null)
    {
        <h2>Ooops! Ocorreu um erro, mas não se preocupe. Nossa equipe será avisada e iremos corrigir em breve!</h2>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}